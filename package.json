{
  "name": "@opd/g2plot-react",
  "version": "1.7.4",
  "description": "G2Plot for React",
  "keywords": [
    "component",
    "g2",
    "g2plot",
    "chart"
  ],
  "author": "kagawagao <kingsongao1221@gmail.com> (https://kingsongao.com/)",
  "homepage": "https://g2plot.open-data-plan.com/",
  "license": "MIT",
  "main": "lib/index.js",
  "module": "es/index.js",
  "types": "typings",
  "directories": {
    "lib": "lib",
    "test": "__tests__"
  },
  "files": [
    "lib",
    "es",
    "typings",
    "*.d.ts"
  ],
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/open-data-plan/g2plot-react.git"
  },
  "scripts": {
    "dev": "dumi dev",
    "lint": "eslint . --ext=.ts,.tsx",
    "lint:fix": "eslint . --ext=.ts,.tsx --fix",
    "test": "jest -u",
    "prebuild": "npm test",
    "build": "npm run build:es & npm run build:commonjs & npm run build:types",
    "build:es": "babel src -d es --extensions .ts,.tsx --delete-dir-on-start",
    "build:commonjs": "cross-env BABEL_ENV=commonjs babel src -d lib --extensions .ts,.tsx --delete-dir-on-start",
    "build:types": "tsc",
    "build:docs": "dumi build",
    "preversion": "npm run build",
    "version": "conventional-changelog -p angular -i CHANGELOG.md -s && git add CHANGELOG.md",
    "postversion": "npm publish"
  },
  "devDependencies": {
    "@antv/g2plot": "^1.1.26",
    "@babel/cli": "^7.11.6",
    "@commitlint/cli": "^9.1.2",
    "@commitlint/config-conventional": "^10.0.0",
    "@opd/babel-preset-component": "^1.8.3",
    "@opd/eslint-config-pangu": "^1.8.4",
    "@opd/jest-preset-pangu": "^1.8.3",
    "@opd/prettier-config-pangu": "^1.8.3",
    "@types/lodash": "^4.14.161",
    "@types/react": "^16.9.49",
    "@types/react-dom": "^16.9.8",
    "@types/react-test-renderer": "^16.9.3",
    "@umijs/plugin-analytics": "^0.2.1",
    "canvas": "^2.6.1",
    "conventional-changelog-cli": "^2.1.0",
    "cross-env": "^7.0.2",
    "dumi": "^1.1.0-beta.19",
    "husky": "^4.3.0",
    "jest-canvas-mock": "^2.2.0",
    "lint-staged": "^10.3.0",
    "lodash": "^4.17.20",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-test-renderer": "^16.13.1",
    "typescript": "^4.0.2"
  },
  "prettier": "@opd/prettier-config-pangu",
  "peerDependencies": {
    "@antv/g2plot": "^1.0.0",
    "lodash": "^4.17.x",
    "react": "^15.0.0 || ^16.0.0"
  },
  "dependencies": {},
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix"
    ],
    "*.{json,md}": [
      "prettier -c --write"
    ]
  }
}
